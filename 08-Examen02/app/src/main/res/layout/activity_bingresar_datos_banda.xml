<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".BIngresarDatosBanda"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayText"
        android:text="Ingresar Información de la Banda"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/bandDefaultImage"
        android:layout_width="62dp"
        android:layout_height="53dp"
        android:layout_below="@id/displayText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_library_music_24" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandName"
        android:hint="Ingresar el nombre"
        android:layout_below="@id/bandDefaultImage"
        android:padding="10dp"
        android:inputType="textCapWords|text"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandGenre"
        android:hint="Ingresar el género/estilo"
        android:layout_below="@id/bandName"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:inputType="textCapWords|text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandAwards"
        android:hint="Ingresar el número de premios"
        android:layout_below="@id/bandGenre"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandCreationDate"
        android:hint="Ingresar el año de creación"
        android:layout_below="@id/bandAwards"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:inputType="date"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandFundsPerConcert"
        android:hint="Ingresar ganancia promedia por concierto"
        android:layout_below="@id/bandCreationDate"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:inputType="numberDecimal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton"
            android:text="Crear"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateButton"
            android:text="Actualizar"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información de las Bandas"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_BandInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        />

</LinearLayout>
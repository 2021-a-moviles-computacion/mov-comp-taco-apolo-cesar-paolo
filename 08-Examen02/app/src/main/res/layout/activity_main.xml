<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ir_banda"
        android:layout_width="124dp"
        android:layout_height="55dp"
        android:text="@string/bandas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="@string/examen_2b_m_viles"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_ir_banda"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_banda"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_banda" />

    <Button
        android:id="@+id/btn_ir_musico"
        android:layout_width="123dp"
        android:layout_height="55dp"
        android:layout_marginTop="128dp"
        android:text="@string/m_sicos"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_banda"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_banda"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_banda" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/c_sar_paolo_taco_apolo"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="98dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_banda"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_banda"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_banda"
        app:srcCompat="@drawable/ic_baseline_library_music_24"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_ir_musico"
        app:layout_constraintStart_toStartOf="@+id/btn_ir_musico"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_musico"
        app:srcCompat="@drawable/ic_baseline_band_image"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>